@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}

@model  ICollection<Lottery.Model.RoleInfo>

@section style{
    <!-- DATA TABLES -->
    <link href="/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
}

<section class="content-header">
    <h1 style="font-family:'Microsoft YaHei'">
        角色列表
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>角色名</th>
                                <th>角色描述</th>
                                <th>是否删除</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
@Html.Partial("_Msg")
@Html.Partial("_Confirm")

@section script{

    <!-- DATA TABES SCRIPT -->
    <script src="/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/Scripts/dataTables.bootstrap.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        var table;
        $(function () {
            table = $("#example1").DataTable({
                "oLanguage": { "sUrl": "/Areas/Admin/Content/css/de_DE.txt" },  //国际化文件
                "lengthChange": false,
                "ordering": false,
                "searching": false,
                "bServerSide": true,
                "sAjaxSource": "/Admin/Role/GetRoleInfoByPage",
                'bPaginate': true,  //是否分页。
                "bProcessing": true, //当datatable获取数据时候是否显示正在处理提示信息。
                "aLengthMenu": [[20, 50, -1], [ 20, 50, "All"]],
                "aoColumns": [
                                                { "sClass": "center", "mDataProp": "RoleId" },
                                                { "sClass": "center", "mDataProp": "RoleName" },
                                                { "sClass": "center", "mDataProp": "RoleDesc" },
                                                { "sClass": "center", "mDataProp": "DeleteMark" },
                                               {
                                                   "mDataProp": "RoleId",
                                                   "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                                       if (oData.DeleteMark == "0") {
                                                           $(nTd).html("<a href='/Admin/Role/Edit/" + oData.RoleId + "'>编辑</a>&nbsp;&nbsp;<a href='javascript:void(0)' onclick='DeleteRole(" + oData.RoleId + ")'>删除</a>");
                                                       }
                                                       else {
                                                           $(nTd).html("<a href='/Admin/Role/Edit/" + oData.RoleId + "'>编辑</a>");
                                                       }
                                                   }
                                               },
                ],
                "aoColumnDefs": [
                    {
                        "aTargets": [3],
                        "mRender": function (data, type, full) {
                            if (data == "0") {
                                return "否";
                            }
                            else {
                                return "是";
                            }
                        }
                    }
                ]
            });
        });
    </script>

    <script type="text/javascript">

        $("#rolemanage").parent("ul").attr("display", "block").parent("li").addClass("active");
        //获取Modal层对象
        var confirmbody = $("#confirmbody");
        var confrmmodal = $("#confirm-modal");
        var msgbody = $("#msgbody");
        var msgmodal = $("#msg-modal");

        //删除
        function DeleteRole(id) {
            confirmbody.text("确认要删除吗？");
            confrmmodal.modal();
            //确认删除
            $("#btnConfirm").click(function () {
                //关闭当前弹出层
                confrmmodal.modal('hide');
                if (id != null) {
                    $.post("/Admin/Role/Delete/" + id, function (data) {
                        msgbody.text(data.msg);
                        msgmodal.modal().on('hidden.bs.modal', function () {
                            table.ajax.reload(null, false);     //重新加载当前页
                        });

                        //如果没有关闭，1.5秒后自动关闭
                        setInterval(function () { msgmodal.modal('hide'); }, 1500); 
                    }); //post
                }
            })
        }
    </script>
}


